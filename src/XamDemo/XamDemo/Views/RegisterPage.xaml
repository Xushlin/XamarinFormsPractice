<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamDemo.Views.RegisterPage"
             Title="Register">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Email" Style="{StaticResource GreyColor}"/>
            <Entry Placeholder="Enter your email" HorizontalOptions="FillAndExpand"></Entry>
            <Label Text="Password"/>
            <Entry Placeholder="Enter your password" HorizontalOptions="FillAndExpand" IsPassword="True"></Entry>
            <Label Text="New Password"/>
            <Entry Placeholder="Enter your password" HorizontalOptions="FillAndExpand" IsPassword="True"></Entry>
            <Button HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Text="Save" Margin="0,20,0,20"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>